@model SchoolManagementSystemP1.adonetdatamodel.ParentRelationship
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
@using (Html.BeginForm())
{
    @Html.HiddenFor(x=>x.RelationshipId)
    <div class="form-group">
        <label class="col-md-2">Relationship</label>
        @Html.TextBoxFor(x => x.RelationshipName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Status, new { @class = "col-md-2" })
        @Html.RadioButtonFor(m => m.Status, "True", new { @Id = "Status" }) True
        @Html.RadioButtonFor(m => m.Status, "False", new { @Id = "Status" }) False
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
}

